<section id="aa-single">
    <div class="container">
        <div class="space"></div>
        <div class="row no-gutters">
            <div class="col-md-8"  style="padding-right: 50px;   text-align: justify">
                <h1 class="orange-title">{{abaixo.titulo}}</h1>
                <p class="resumo-aa">{{abaixo.resumo}} </p>
                <p>{{abaixo.texto}}</p>
            </div>
            <div class="col-aa col-md-4" style="padding-top: 5px">
                <h3 class="orange-title" style="text-align: right">Temos {{abaixo.qtdAssinaturas}} assinaturas!</h3>
                <h5 class="orange-title" style="text-align: right; padding-bottom: 30px">Ajude-nos a atingir a meta:</h4>
                <form id="assinarabaixo" class="form-inline" style="display: flex; justify-content:flex-end" action="#"
                    method="post">
                    <input type="email" class="form-control mx-sm-3 mb-2" id="email-assinar" name="emailAssinar"
                        aria-describedby="emailHelp" placeholder="Insira seu email">
                    <button type="submit" class="btn btn-success btn-adote mb-2">Assinar</button>
                </form>
                <div class="progress" style="width: 25em; float: right; margin-top: 10px">
                    <div class="progress-bar" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: {{abaixo.porcentagem}}%"></div>
                </div>
                <div class="space"></div>
                <p class="ass-aa">Meta: {{abaixo.meta}} assinaturas</p>
            </div>
        </div>
    </div>
</section>

<script>
    $('#assinarabaixo').on('submit', (e) => {
        e.preventDefault();
        $.ajax({
        url: '/:titulo',
        method: 'post',
        data: $('#assinarabaixo').serialize()
        }).done(d => {
        Swal.fire(d);
        $('#email-assinar').val('');
        });
    })
</script>